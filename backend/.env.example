# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development
PORT=5000
APP_NAME=Studion
APP_VERSION=1.0.0-dev
API_PREFIX=/api

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_API_DOCS=true
FEATURE_RATE_LIMITING=false
FEATURE_REQUEST_LOGGING=true


# ==========================================
# DATABASE
# ==========================================
MONGODB_DB_NAME=studion
MONGODB_USER=studion_user  
MONGODB_PASSWORD=DBPassWord!
MONGODB_VERSION=7.0
MONGODB_URI=mongodb://studion_user:DBPassWord!@localhost:27017/studion

# ==========================================
# SECURITY & AUTHENTICATION
# ==========================================
JWT_SECRET=JWT-SECRET-KEY
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
BCRYPT_ROUNDS=12

# ==========================================
# CORS & CLIENT
# ==========================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==========================================
# FILE STORAGE
# ==========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=application/pdf

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW=15  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# ==========================================
# LOGGING & MONITORING
# ==========================================
LOG_LEVEL=debug  # Options: error, warn, info, debug
REQUEST_LOGS=true
ERROR_LOGS=true

