{
  "name": "studion-backend",
  "version": "1.0.0",
  "description": "AI-Powered Learning Platform - Backend API",
  "main": "src/server.js",
  "type": "module",
  "imports": {
    "#src/*": "./src/*",
    "#app": "./app.js",
    "#config/*": "./src/config/*",
    "#lib/*": "./src/lib/*",
    "#constants/*": "./src/constants/*",
    "#controllers/*": "./src/controllers/*",
    "#exceptions/*": "./src/exceptions/*",
    "#middleware/*": "./src/middleware/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#models/*": "./src/models/*",
    "#validators/*": "./src/validators/*",
    "#tests/*": "./tests/*"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "echo 'No build step required for Node.js'",
    "db:seed": "node scripts/seed.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:exceptions": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/exceptions",
    "test:base": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/exceptions/base.test.js",
    "test:database": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/exceptions/database.test.js",
    "test:models": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/models",
    "test:models:user": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/models/BaseUser.test.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "validate": "npm run lint && npm run test",
    "validate:exceptions": "npm run lint && npm run test:exceptions",
    "validate:models": "npm run lint && npm run test:models",
    "clean": "rm -rf node_modules dist",
    "logs": "pm2 logs studion-backend"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^#src/(.*)$": "<rootDir>/src/$1",
      "^#app$": "<rootDir>/app.js",
      "^#config/(.*)$": "<rootDir>/src/config/$1",
      "^#lib/(.*)$": "<rootDir>/src/lib/$1",
      "^#constants/(.*)$": "<rootDir>/src/constants/$1",
      "^#controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "^#exceptions/(.*)$": "<rootDir>/src/exceptions/$1",
      "^#middleware/(.*)$": "<rootDir>/src/middleware/$1",
      "^#routes/(.*)$": "<rootDir>/src/routes/$1",
      "^#services/(.*)$": "<rootDir>/src/services/$1",
      "^#models/(.*)$": "<rootDir>/src/models/$1",
      "^#validators/(.*)$": "<rootDir>/src/validators/$1",
      "^#tests/(.*)$": "<rootDir>/tests/$1"
    },
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "keywords": [
    "ai",
    "education",
    "learning",
    "api",
    "express"
  ],
  "author": "Abdessamad Haddouche",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
